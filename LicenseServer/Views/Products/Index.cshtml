@model IEnumerable<LicenseServer.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table class="table">
        <tr>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-sm-4">
                @Html.DisplayNameFor(model => model.PrivateKey)
            </th>
            <th class="col-sm-4">
                @Html.DisplayNameFor(model => model.PublicKey)
            </th>
            <th class="col-sm-2"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">
                    <div>@Html.DisplayFor(modelItem => item.Name)</div>
                </td>
                <td class="col-md-4">
                    <div>@Html.DisplayFor(modelItem => item.PrivateKey)</div>
                </td>
                <td class="col-md-4">
                    <div> @Html.DisplayFor(modelItem => item.PublicKey)</div>
                </td>
                <td class="col-sm-2">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>


</div>

